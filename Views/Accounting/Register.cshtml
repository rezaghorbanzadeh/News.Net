@model NewsSite.ViewsModels.Account.RegisterViewModel;
@{
    ViewData["Title"] = "register";
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Login 13 - Bootstrap Brain Component -->
<section class="bg-light py-3 py-md-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                <div class="card border border-light-subtle rounded-3 shadow-sm">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Register your Accounting</h2>
                        <form method="post" asp-area="" asp-controller="Accounting" asp-action="Register">
                            @Html.AntiForgeryToken()
                            <div class="row gy-2 overflow-hidden">
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" asp-for="UserName" placeholder="username" >
                                        <label for="UserName" class="form-label">UserName</label>
                                        <span asp-validation-for="UserName" class="text-bg-danger"></span>
                                    </div>
                                </div>         
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com" >
                                        <label for="email" class="form-label">Email</label>
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control" asp-for="Password" placeholder="name@example.com" >
                                        <label for="Password" class="form-label">Password</label>
                                        <span asp-validation-for="Password"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid my-3">
                                        <button class="btn btn-primary btn-lg" type="submit">Log in</button>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <p class="m-0 text-secondary text-center">You have an Accounting? <a asp-area="" asp-controller="Accounting" asp-action="Login" class="link-primary text-decoration-none">Login </a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>